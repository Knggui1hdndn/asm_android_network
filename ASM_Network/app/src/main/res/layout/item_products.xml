<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:id="@+id/mRelate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="100dp"
        android:layout_marginRight="15dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/mLiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
         android:layout_marginRight="10dp"
        android:layout_toStartOf="@id/imgShow"
        android:layout_toEndOf="@+id/card"
        android:layout_toRightOf="@id/card"
        android:orientation="vertical">

        <TextView

            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtName"
            android:layout_toRightOf="@id/card"
            android:text="25000$"
            android:textSize="18dp"
            android:textStyle="italic" />


        <TextView

            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Thôn tám lê xá tú sơn" />

        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0867896418"

            />

    </LinearLayout>


    <ImageView
        android:id="@+id/imgEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"


        android:singleLine="true"
        android:src="@drawable/baseline_edit_24" />

    <ImageView
        android:id="@+id/imgShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15sp"
        android:layout_toLeftOf="@id/imgEdit"
        android:src="@drawable/baseline_open_in_full_24" />
    <TextView

        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/9/2003"
        android:layout_alignParentEnd="true"
        android:textStyle="bold|italic" />
</RelativeLayout>